{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "F&F Backend",
    "description": "This is our Swagger Schema to check and test our API",

    "license": {
      "name": "MIT",
      "url": "https://opensource.org/license/MIT"
    }
  },
  "paths": {
    "/user/getUser": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get user with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "User with id",
            "schema": {
              "$ref": "#/definitions/id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "404": {
            "description": "Failed. Cat not found."
          }
        }
      }
    },
    "/user/addUser": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user in system",
        "requestBody": {
          "description": "User Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    }
  },
  "definitions": {
    "id": {
      "properties": {
        "uuid": {
          "type": "string"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "email": {
          "type": "boolean"
        },
        "phoneNumber": {
          "type": "string"
        }
      }
    }
  }
}
